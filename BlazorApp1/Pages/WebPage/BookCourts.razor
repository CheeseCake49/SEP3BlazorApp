@page "/webpageindex/BookCourts"
@using HttpClients.ClientInterfaces
@using global::Shared.Models
@inject ITimeSlotService timeSlotService

<MudTable Items="@timeSlots" Hover="true" Breakpoint="Breakpoint.Sm" LoadingProgressColor="Color.Info">
    <HeaderContent>
        <MudTh>6</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudChipSet MultiSelection="true"></MudChipSet>
        @foreach (var timeSlot in timeSlots)
        {
        <MudTd>
            <MudChip Text="" Value="context.startTime" Variant="Variant.Text" Color="Color.Default" SelectedColor="Color.Primary"></MudChip>
        </MudTd>
        }
    </RowTemplate>
</MudTable>


@code { 
    private IEnumerable<TimeSlot> timeSlots = new List<TimeSlot>();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            timeSlots = await timeSlotService.GetTimeSlots(15);
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex.Message);
        }
    }

}